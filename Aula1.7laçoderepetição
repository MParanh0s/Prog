    for ( i= 1; i <=10 ; i++){
    printf("%i x %i = %i \n ", tab, i ,tab*i);
    // for (inicialização; Parada; incremento/decremento) 
    // bloco de código a ser repetido
    
    }
    printf("digite a Quantidade de vezes que a mensagem deve aparecer:\n");
    scanf("%i", &qtd);
    for(i=0; i<qtd; i++){
    printf("Curso Eng.Eletrica\n");
    }
